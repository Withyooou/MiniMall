/* pages/cart/childCpns/y-bottom-bar/y-bottom-bar.wxss */
.bottom-bar {
  font-size: 28rpx;
  height: 88rpx;
  background: #eee;
  padding-left: 30rpx;
  align-items: center;
  box-shadow: 0 -2px 2px rgba(0, 0, 0, .1);
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.check-box {
  width: 150rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.counter {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  display: flex;
  flex-flow: row nowrap;
  align-content: center;
  justify-content: space-around;
}
.clear {
  display: flex;
  align-items: center;
}
.clearImg{
  margin-right: 6rpx;
}
.payment {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff4500;
  color: #fff;
  text-align: center;
}
.icon {
  margin-right: 10rpx;
}
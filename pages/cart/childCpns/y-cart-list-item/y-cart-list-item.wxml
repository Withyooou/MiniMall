<!--pages/cart/childCpns/y-cart-list-item/y-cart-list-item.wxml-->
<view class='cart-list-item' 
      bindtap="handleTap"
      catch:longpress="handleLongPress"
      data-index="{{index}}">
  <view class='item-icon'>
    <y-check-icon catch:tap='onCheckClick' 
                  data-index="{{index}}" 
                  isChecked="{{goods.checked}}"/>
  </view>
  <view class='item-img'>
    <image src="{{goods.imageURL}}" mode='aspectFill'/>
  </view>
  <view class='item-info'>
    <view class='title'>{{goods.title}}</view>
    <view class='desc'>{{goods.desc}}</view>
    <view class='price-count'>
      <view class='price'>Â¥{{goods.price}}</view>
      <view class='count'>x{{goods.count}}</view>
    </view>
  </view>
</view>
